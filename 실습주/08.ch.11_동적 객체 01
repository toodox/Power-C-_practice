#include <iostream>
#include <string>

using namespace std;

class Employee {
	string name;
	int salary;
	static int count;
public:
	Employee(string n = "", int s = 0) : name(n), salary(s) {
		count++;
		cout << "직원 이름 : " << this->name << ", 현재인원 : " << count << endl;
	}

	~Employee() {
		count--;
		cout << "직원 퇴사 - " << this->name << ", 남은인원 : " << count << endl;
	}

	static int getCount() {
		return count;
	}
};

int Employee::count = 0;

void main() {
	cout << "현재 인원 : " <<Employee::getCount() << endl;
	Employee *e1 = new Employee("Jang", 30000);				// 동적 개체 생성 (메모리 할당)
	Employee *e2 = new Employee("Kim", 20000);
	Employee *e3 = new Employee("Jeong", 25000);

	cout << "Number of employees : " << Employee::getCount() << endl;

	delete e1; // 소멸자 호출
	cout << "Number of employees : " << Employee::getCount() << endl;

	delete e2;
	cout << "Number of employees : " << Employee::getCount() << endl;
	//프로그래머가 할당한 도엊ㄱ 메모리에 대해서는 소멸자를 자동으로 호출하지 않는다.


}